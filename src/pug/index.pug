- var page = { id :"index" };

doctype
html(lang="ja")
  head
    include includes/_mixins.pug
    include includes/_meta.pug
    include includes/_includes.pug
  body
    include includes/_nav.pug
    .wrap.-index-first
      .row.-index-second
        .col-md-6.col-xl-7
          .row.-index-third.px-0
            .col-xl-7.p-3.-index-left.text-font-mpc
              .container.py-3
                h1.-index-title #{site.title}
                span.-index-theme #{site.theme}
                br
                span.-index-themeinjap  『#{site.themeinjap}』
                p.-index-date
                  span.-index-date-y 2017年
                  span.-index-date-m 6月
                  span.-index-date-day1num 3日
                  span.-index-date-day1Sat (土)
                  br
                  span.-index-date-day2num 4日
                  span.-index-date-day2Sun (日)
            .col-xl-5.pt-xl-5
              .-index-middle.align-left
                .list-group.mx-2.mr-xl-5
                  .list-group-item
                    h3.my-1 更新情報
                  - for( var i in site.updates ) {
                  -   var printableDate = printDate(site.updates[i].date)
                  -   if( i == 0 ){
                    if site.updates[i].link
                      a(href=site.updates[i].link).list-group-item.list-group-item-action.active
                        +updatearticle(i)
                    else
                      .list-group-item.active
                        +updatearticle(i)
                  -   } else if ( i == 5 && site.updates.length > 5 ) {
                    a(href="javascript:void(0);").list-group-item.list-group-item-action
                      b もっと見る
                    if site.updates[i].link
                      a(href=site.updates[i].link).list-group-item.list-group-item-action
                        +updatearticle(i)
                    else
                      .list-group-item
                        +updatearticle(i)
                  -   } else {
                    if site.updates[i].link
                      a(href=site.updates[i].link).list-group-item.list-group-item-action
                        +updatearticle(i)
                    else
                      .list-group-item
                        +updatearticle(i)
                  -   }
                  - }
                  if ( site.updates.length > 5 )
                    a(href="javascript:void(0);").list-group-item.list-group-item-action
                      b 隠す
        .col-md-6.col-xl-5.px-0
          .-index-right.px-3.py-3.py-md-4.d-flex.flex-wrap
            a(href="attention").Attention.py-2.px-3
              .-index-pickups-wrap.rounded.Attention
                .container
                  .-index-pickups.Attention
                    .-index-pickups-head ご注意･ご案内
                    .-index-pickups-desc どうかご来場前にご一読ください
            a(href="access#shuttle").Bus.py-2.px-3
              .-index-pickups-wrap.rounded.Bus
                .container
                  .-index-pickups.Bus
                    .-index-pickups-head 無料シャトルバス
                    .-index-pickups-desc 高崎駅から約10分毎に運行・詳細をご確認ください
            a(href="pantene").Pantene.py-2.px-3
              .-index-pickups-wrap.rounded.Pantene
                .container
                  .-index-pickups.Pantene
                    .-index-pickups-head 一般展示
                    .-index-pickups-desc 今回最も力を入れた校内の展示です
            a(href="food").Food.py-2.px-3
              .-index-pickups-wrap.rounded.Food
                .container
                  .-index-pickups.Food
                    .-index-pickups-head 食べ物･飲み物
                    .-index-pickups-desc 模擬店、食堂、喫茶で美味しいものを食べる
            a(href="events?tab=stage").Events.py-2.px-3
              .-index-pickups-wrap.rounded.Events
                .container
                  .-index-pickups.Events
                    .-index-pickups-head イベントステージ
            a(href="events?tab=gym").Gym.py-2.px-3
              .-index-pickups-wrap.rounded.Gym
                .container
                  .-index-pickups.Gym
                    .-index-pickups-head 体育館行事
    include includes/_footer.pug