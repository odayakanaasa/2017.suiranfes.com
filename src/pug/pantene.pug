- var page = { id :"pantene" };

doctype
html(lang="ja")
  head
    include includes/_mixins.pug
    include includes/_meta.pug
    include includes/_includes.pug
  body
    include includes/_nav.pug
    .wrap
      .container
        .row
          .col-12
            .py-3
              h1 #{page.title}
              p 校内展示の情報です。廊下側から見た図になっております。<span class="-pantene-u1701-text"></span>項目を選択すると、詳細情報が表示されます。
      .-pantene-index-1st.p-2
        h3 展示一覧
      .-pantene-index-columns.p-2
        - for (var j = 3; j > 0; j--) {
          .-pantene-floor
            -   for (var k = 9; k > 0; k--) {
            -     var thereis = false;
            .-pantene-room.p-1
              -     for (var i in fes.pantene) {
              -       if (fes.pantene[i].place.floor == j && fes.pantene[i].place.room == k) {
              -         thereis = true;
              -         if(fes.pantene[i].has_page) {
                a.card.p-2(class=`card-inverse card-${fes.pantenebadges[fes.pantene[i].type].style}`, href=`javascript:void(0);`, data-toggle="modal", data-target=`#pantene_modal_${fes.pantene[i].name}`)
                  +pantene_columm()
                .modal.fade.-pantene-modal(id=`pantene_modal_${fes.pantene[i].name}`, tabindex="-1", role="dialog", aria-hidden="true")
                  .modal-dialog(role="document")
                    .modal-content
                      .modal-header.flex-wrap-reverse
                        p.mr-2: b #{j}-#{k}
                        h5.mr-2 #{fes.pantene[i].title}
                        button.close.ml-auto(type="button", data-dismiss="modal", aria-label="Close")
                          span(aria-hidden="true") &times;
                      .modal-body
                        p
                          +bootstrap_badge_pill( fes.pantenebadges[fes.pantene[i].type].title, fes.pantenebadges[fes.pantene[i].type].style )
                          small
                            +pantene_column_hosts()
                        p!= fes.pantene[i].description.replace(/\r?\n/g,"<br>")
                      .modal-footer
                        h4 Share
                        form
                          .input-group
                            input.form-control(type="url",value=`${site.URL}pantene?modal=pantene_modal_${fes.pantene[i].name}`, readonly)
                            .input-group-btn
                              button.btn.btn-secondary.dropdown-toggle(data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                                +fa('share-alt')
                              .dropdown-menu.dropdown-menu-right
                                a.dropdown-item(href=`line://msg/text/?${encodeURIComponent(site.URL + "pantene?modal=pantene_modal_" + fes.pantene[i].name + "\n\n当日"+ j + "-" + k + "でやってます。校舎内に来てね！\n\n#翠巒祭")}`)
                                  +ft('line')
                                  | &thinsp;LINE it!
                                a.dropdown-item(href=`https://twitter.com/intent/tweet?url=${site.URL}pantene?modal=pantene_modal_${fes.pantene[i].name}&text=${fes.pantene[i].title}\n\n当日${j}-${k}でやってます。校舎内に来てね！&hashtags=翠巒祭&related=suiranfes`, target="_blank")
                                  +fa('twitter')
                                  | &thinsp;Tweet
              -         } else {
                .card.p-2(class=`card-inverse card-${fes.pantenebadges[fes.pantene[i].type].style}`)
                  +pantene_columm()
              -         }
              -       }
              -     }
              -     if (thereis == false) {
                .card.p-2(class="card-inverse card-danger")
                  .d-flex.flex-row
                    div #{j}-#{k}
                    div.ml-auto ?
                  | 準備中......
              -     }
            - if (k == 7 || k == 3) {
              - if( j == 3 && k == 7 ) {
                .-pantene-toilet.p-1
                  .card.p-2(class="card-inverse -pantene-card-toilet")
                    div.m-auto
                      +fa("female")
              - } else if( j == 3 && k == 3 ) {
                .-pantene-toilet.p-1
                  .card.p-2(class="card-inverse -pantene-card-toilet")
                    div.m-auto
                      +fa("female")
              - } else if( j == 2 && k == 7 ) {
                .-pantene-toilet.p-1
                  .card.p-2(class="card-outline-secondary")
                    div.m-auto
                      +fa("male")
              - } else if( j == 2 && k == 3 ) {
                .-pantene-toilet.p-1
                  .card.p-2(class="card-inverse -pantene-card-toilet")
                    div.m-auto
                      +fa("female")
              - } else if( j == 1 && k == 7 ) {
                .-pantene-toilet.p-1
                  .card.p-2(class="card-inverse -pantene-card-toilet")
                    div.m-auto
                      +fa("female")
              - } else if( j == 1 && k == 3 ) {
                .-pantene-toilet.p-1
                  .card.p-2(class="card-outline-secondary")
                    div.m-auto
                      +fa("male")
              - }
              - if ( j == 3 ) {
                .-pantene-stair.px-1.pt-1.pb-0
                  .card.rounded-top.p-2(class="card-inverse card-warning")
                    div.m-auto.-pantene-stair-hidden 階段
              - } else if ( j == 2 ) {
                .-pantene-stair.px-1.py-0
                  .card.rounded-0.p-2(class="card-inverse card-warning")
                    div.m-auto 階段
              - } else if ( j == 1 ) {
                .-pantene-stair.px-1.pt-0.pb-1
                  .card.rounded-bottom.p-2(class="card-inverse card-warning")
                    div.m-auto.-pantene-stair-hidden 階段
              - }
            - }
            - }
            if (j == 1)
              .-pantene-stair.p-1
                .card.p-2(class="card-inverse card-info")
                  div.m-auto 入口
            else
              .-pantene-stair
        - }
        // 4段目
        .-pantene-floor
            .-pantene-room.p-1
              a.btn.btn-outline-secondary.btn-block.my-1.-pantene-wtf(href="/food?tab=stall") 模擬店
              a.btn.btn-outline-secondary.btn-block.my-1.-pantene-wtf(href="/events?tab=kaikan") 翠巒会館
            .-pantene-toilet
            .-pantene-stair
            .-pantene-room.p-1
              a.card.p-2(class="card-inverse card-info", href=`javascript:void(0);`, data-toggle="modal", data-target=`#pantene_modal_engra`)
                div
                  +fa("chevron-right")
                  | 玄関
                h6.m-0 エントランス・グラフィック
                small 創作班美術課
            .-pantene-room.p-1
              a.card.p-2(class="card-inverse card-info", href=`javascript:void(0);`, data-toggle="modal", data-target=`#pantene_modal_endec`)
                div
                  +fa("chevron-right")
                  | 玄関
                h6.m-0 投票場
                small 一般展示班
            .-pantene-room
            .-pantene-room
            .-pantene-room.p-1
              a.card.p-2(class="card-outline-warning bg-white", href=`javascript:void(0);`, data-toggle="modal", data-target=`#pantene_modal_owen`)
                div
                  +fa("chevron-right")
                  | 中庭
                h6.m-0 リーダー公開
                small 應援部
            .-pantene-room.p-1
              a.card.p-2(class="card-outline-warning bg-white", href=`javascript:void(0);`, data-toggle="modal", data-target=`#pantene_modal_act`)
                div
                  +fa("chevron-right")
                  | 中庭
                h6.m-0 演劇
                small 演劇部
            .-pantene-stair
            .-pantene-stair.p-1
              .card.p-2(class="card-inverse card-info")
                div.m-auto 出口
            .-pantene-room.p-1
              a.card.p-2(class="card-inverse card-danger", href=`/food#bread`)
                div 
                  +fa("chevron-right")
                  | 2F
                h6.m-0 食堂
                small 食堂･喫茶班
            .-pantene-stair
            .-pantene-room.p-1
              a.btn.btn-outline-secondary.btn-block.my-1.-pantene-wtf(href="/events?tab=gym") 体育館
              a.btn.btn-outline-secondary.btn-block.my-1.-pantene-wtf(href="/events?tab=stage") ステージ
              a.btn.btn-outline-secondary.btn-block.my-1.-pantene-wtf(href="/invmatch") 招待試合

    include includes/_footer.pug
    +_pantene_modals()